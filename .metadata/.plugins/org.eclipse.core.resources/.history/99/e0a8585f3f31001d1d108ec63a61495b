package exercicios;

public class ex14 
{
	public static void contar(String [] vet)
	{
		int tamanho = vet.length;
		String repetidos[] = new String[tamanho];
		int cont = 0;
		
		for(int i = 0; i < vet.length; i++)
		{
			for(int j = i + 1; j < vet.length;)
			{
				if(vet[i] == vet[j])
				{
					repetidos[i] = vet[i];
					cont++;
				}
			}
			
			for(i = 0; i < tamanho; i++)
			{
				System.out.println("O elemento " + repetidos[i] + " se repete " + cont + " vezes.");
			}
		}
		
	}
	public static void main(String[] args)
	{
		/*14) Contagem de caracteres: Sua função deverá contar os caracteres que
		aparecem no vetor. Os caracteres podem ser qualquer letra ou número do
		alfabeto.*/
		
		// vetor exemplo:
		String vet[] = {"a","b","c","3","3","5","a","c"};
		
		contar(vet);

	}

}
