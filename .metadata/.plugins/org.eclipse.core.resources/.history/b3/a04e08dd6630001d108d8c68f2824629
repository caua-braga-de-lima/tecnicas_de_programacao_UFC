package exercicios;

public class ex03 
{
	public static int vetor_novo(int indice)
	{
		int vetnovo[] = new int[14];
		for(int i = 0; i < vetnovo.length;)
		{
			vetnovo[i] = indice;
			break;
			return vetnovo[i];
			
		}
		
	}
	public static void separacao(int vet[])
	{
		for(int i = 0; i < vet.length; i++)
		{
			if(vet[i] < 0)
			{
				vetor_novo(vet[i]);
			}
		}
	}
	public static void main(String[] args) 
	{
		/*3) Separação de valores positivos e negativos: Sua função deverá receber um vetor e 
			  deverá colocar nesse vetor os números negativos  nas primeiras posições e os números
			  negativos nas últimas posições.*/
		
		int vet[] =  {12, 13, 14, 15, 16, 17, 18, 19, 20, -3, -4, -5, -6 ,-7};
		
		separacao(vet);
		
		int novo_vetor[] = new int[14];
		for(int i = 0; i < novo_vetor.length; i++)
		{
			novo_vetor[i] = 
		}
		
		System.out.println("O vetor na ordem é ");

	}

}
